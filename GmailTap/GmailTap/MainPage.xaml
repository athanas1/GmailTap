<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GmailTap.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Gmail Tap!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Message Here!" FontSize="Title" Padding="30,10,30,10" x:Name="message"/>
        <Label Text="Dots and Dashes" FontSize="32" Padding="30,0,30,0" x:Name="dotsAndDashs"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
            <Button Text=".Dot" Clicked="onDot"></Button>
            <Button Text="-Dash" Clicked="onDash"></Button>
            <Button Text="Space" Clicked="onSpace"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
